<section class="vf-hero vf-hero--very-easy">

  <div class="vf-hero__content">
    {% if vf_hero_heading %} <h2 class="vf-hero__heading">{{ vf_hero_heading }}</h2>{% endif %}
    <p class="vf-hero__text">{{ vf_hero_text }}<a class="vf-link" href="{{ vf_hero_link }}"> {{ vf_hero_link_text }}</a></p>
  </div>

</section>

