<div class="vf-grid  vf-grid__col-3">

  <div class="vf-card vf-card--topic">
    <img src="{{ image }}" alt="" class="vf-card__image">
    <div class="vf-card__content">
      <h3 class="vf-card__title">
        {{ title }}
      </h3>
      <p class="vf-card__text">
        {{ text }}
      </p>
    </div>
  </div>


  <div class="vf-card vf-card--navigation">
    <img src="{{ image }}" alt="" class="vf-card__image">
    <div class="vf-card__content">
      <h3 class="vf-card__title">
        <a href="#" class="vf-card__link">{{ title }}</a>
      </h3>
      <p class="vf-card__text">
        {{ text }}
      </p>
    </div>
  </div>

</div>
