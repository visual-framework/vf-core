    "vf_intro_heading": "Further information about a topic",
    "vf_intro_badge": false,
    "vf_intro_subheading": "",
    "vf_intro_lede": "At EMBL-EBI we have a diverse, multidisciplinary team of over 850 people from 78 countries.",
    "vf_intro_text": [
