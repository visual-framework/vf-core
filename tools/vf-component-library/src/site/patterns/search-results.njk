      <div class="vf-show-hide vf-show-hide--hidden" data-vf-js-show-hide data-vf-js-show-hide-hidden>
      {% render '@vf-banner--info', {
        "alert_icon_text": "dismiss",
        "banner__info": true,
        "banner__dismissable": false,
        "banner__message": "Tip: You may also wish to precede the results with pagination and details of which page out of how many this is."
      } %}
      </div>
    </div>
  </section>

  {% render "@vf-footer" %}
  {# {% include "./templates/notice-boilerplate.njk" %} #}

  <style>
  /* vf-show-hide still needs to be implemented */
  {# .vf-show-hide--hidden { display: none; } #}
  </style>

  {% if serverInfo.environment == "development" %}
  <div class="vf-grid">
    <div class="vf-body--text">
      <p><code class="vf-code-example__pre"> ⚠️ You're running the {{serverInfo.environment}} command; Page location {{ page.inputPath }} </code></p>
    </div>
  </div>
  {% endif %}

  <!-- This page was generated on {{ siteConfig.buildTime }} -->
  {% if serverInfo.environment == "development" -%}
    <script src="{{ '/scripts/scripts.js' | url }}"></script>
  {%- else -%}
    <script src="https://assets.emblstatic.net/vf/{{ siteConfig.vfVersion }}/scripts/scripts.js"></script>
  {%- endif -%}
</body>
</html>
