{% macro renderError(type, message, stack) %}
<div class="Error Error--render">
    <h4 class="Error-title">Error rendering {{ type }}</h4>
    <div class="Error-message pattern-library-notes">
        {{ message | markdown }}
    </div>
    {% if stack %}
    <code class="Error-stack vf-code-example">
        <pre class="vf-code-example__pre">{{ stack }}</pre>
    </code>
    {% endif %}
</div>
{% endmacro %}
