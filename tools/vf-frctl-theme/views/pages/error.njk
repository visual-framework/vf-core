{% extends "layouts/doc.njk" %}

{% set page = {
    title: ('Not found' if error.status == '404' else error.name) | default('An error has occurred')
} %}

{% block docContent %}

<div class="Error">

    <div class="Error-message component-library-notes">
        {{ error.message | default('No more information is available.') | markdown }}
    </div>

    {% if error.stack and error.status != '404' %}
    <code class="Code Error-stack vf-code-example">
        <pre class="vf-code-example__pre">{{ error.stack }}</pre>
    </code>
    {% endif %}

</div>

{% endblock %}
